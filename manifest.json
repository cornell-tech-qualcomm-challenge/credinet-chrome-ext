{
  "manifest_version": 2,

  "name": "CrediNet",
  "description": "NCP Demo",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["background.js"],
    "matches": ["https://medium.com/*"]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
